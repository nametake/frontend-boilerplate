{
  "extends": ["airbnb"],
  "rules": {
    "import/no-relative-parent-imports": "error",
    "react/jsx-filename-extension": [1, { "extensions": [".tsx"] }]
  },
  "plugins": ["react"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "env": {
    "browser": true,
    "es6": true
  },
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "settings": {
    "import/resolver": "webpack"
  }
}
